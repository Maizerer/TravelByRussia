<Window x:Class="TravelByRussia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelByRussia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#445c93">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Source="Resources/logo.png" Height="75" Grid.Column="0" HorizontalAlignment="Left" Margin="10,0,0,0"></Image>
            <TextBlock Text="Путешествуй по России" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" FontSize="22" Foreground="White"></TextBlock>
            <Button Content="Назад" Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" FontSize="16" Margin="0,0,20,0" Background=" #fac716"/>
        </Grid>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
